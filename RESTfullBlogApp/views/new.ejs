<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog Post</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Post title..." />
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" placeholder="Post image url..." />
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="Blog body..." ></textarea>
        </div>
        <button class="ui big vertical animated fluid primary button">
            <div class="visible content">Save</div> 
            <div class="hidden content"><i class="save icon"></i></div>
        </button>
    </form>
</div>

<% include partials/footer %>