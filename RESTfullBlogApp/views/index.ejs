<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <a href="/blogs/<%= blog._id %>" class="image">
                        <img src="<%= blog.image %>" />
                    </a>
                    <div class="content">
                        <a href="/blogs/<%= blog._id %>" class="header"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%= blog._id %>" class="ui small animated floated teal button">
                                <div class="visible content">Read More</div>
                                <div class="hidden content"><i class="right chevron icon"></i></div>
                            </a>
                        </div>
                    </div>
                    
                </div>
            <% }) %>
        </div>
    </div>
    
</div>

<% include partials/footer %>
