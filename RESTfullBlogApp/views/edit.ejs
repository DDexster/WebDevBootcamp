<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog Post</div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Post title..." value="<%= blog.title %>"/>
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" placeholder="Post image url..." value="<%= blog.image %>" />
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="Blog body..."><%= blog.body %></textarea>
        </div>
        <button class="ui big vertical animated fluid orange button">
            <div class="visible content">Update</div>    
            <div class="hidden content"><i class="checkmark icon"></i></div>
        </button>
    </form>
</div>

<% include partials/footer %>