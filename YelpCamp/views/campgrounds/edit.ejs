<% include ../partials/header %>

<div class="container">
  <div class="row text-center">
    <h1>Edit a <%= campground.name %></h1>
    
   <div style="width:30%; margin:25px auto;">
      <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" 
                   type="text" 
                   placeholder="Name..." 
                   name="campground[name]"
                   value="<%= campground.name %>" />
        </div>
        <div class="form-group">
            <input class="form-control" 
                   type="text" 
                   placeholder="Image url..." 
                   name="campground[image]"
                   value=<%= campground.image %> />
        </div>
        <div class="form-group">
            <textarea class="form-control" placeholder="Description..." name="campground[desc]"><%= campground.desc %>
            </textarea>
        </div>

        <div class="form-group">
            <button class="btn btn-info btn-lg btn-block">Submit Changes</button>
        </div>
      </form>

      <form action="/campgrounds/<%= campground._id %>/?_method=DELETE" method="POST">
           <button class="btn btn-danger btn-lg btn-block">Delete Campground</button>
      </form>
      
   </div>
    
    <a href="/campgrounds/<%= campground._id %>">Go back</a>
  </div>
</div>

<% include ../partials/footer %>
