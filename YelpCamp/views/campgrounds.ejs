<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to Yelp Camp!</h1>
    <p>View our hand-picked campgrounds all over the world</p>
    <p><a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a></p>
    
  </header>

<div class="row text-center" style="displey:flex; flex-wrap-wrap">
  <div class="col-lg-12">
    <h3>Our Most Popular Campgrounds</h3>
  </div>

  <% campgrounds.forEach(function(camp){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src='<%= camp["image"] %>' />
        <div class="caption"><h4><%= camp["name"]%></h4></div>
      </div>
    </div>
  <% }) %>
</div>

<a href="/">Back</a>
</div>

<% include partials/footer %>
